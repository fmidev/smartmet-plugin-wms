{
    "title": "Wind observations",
    "producer": "opendata",
    "projection":
    {
	"crs": "EPSG:4326",
	"cx" : 25,
	"cy" : 65,
	"resolution" : 3,
	"xsize": 500,
	"ysize": 500
    },
    "views":
    [
	{
	    "qid": "v1",
	    "attributes":
	    {
		"id": "view1"
	    },
	    "layers":
	    [
		{
		    "qid": "sea",
		    "layer_type": "background",
		    "attributes":
		    {
			"fill": "white"
		    }
		},
		{
                    "qid": "l1",
                    "layer_type": "map",
                    "map":
                    {
                        "schema": "natural_earth",
                        "table": "admin_0_countries",
                        "minarea": 100
                    },
                    "attributes":
                    {
                        "id": "europe_country_lines",
                        "fill": "none",
                        "stroke": "#222",
                        "stroke-width": "0.3px"
                    }
                },
		{
		    "qid": "l2",
		    "layer_type": "arrow",
		    "arrows": "json:arrows/windbarb.json",
		    "css": "arrows/windbarb.css",
		    "direction": "WindDirection",
		    "speed": "WindSpeedMS",
		    "minvalues": 155,
		    "multiplier": 1.94384449244,  // to knots, inverse of 0.514444....
		    "southflop": true,
		    "scale": 1.0,
		    "attributes":
		    {
			"id": "wind_arrows"
		    },
		    "maxdistance": 10,
		    "positions":
		    {
			"layout": "keyword",
			"keyword": "synop_fi"
		    }
		}
	    ]
	}
    ]
}
