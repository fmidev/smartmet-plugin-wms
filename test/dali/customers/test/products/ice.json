		    }
		},
                {
		    "qid": "l1",
                    "layer_type": "postgis",
		    "pgname": "icemap",
		    "schema": "icemap",
		    "table": "publish_seaice",
		    "time_column": "publicationdate",
		    "time_truncate": "day",
